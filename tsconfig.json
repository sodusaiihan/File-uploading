{
  "compilerOptions": {
    "target": "ES2017",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es5", "es6", "es7"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "typeRoots" : ["node_modules/@types", "src/types"]
  },
  "include": ["./src", "webpack.config.ts"],
  "exclude": ["node_modules", "dist"]
}
